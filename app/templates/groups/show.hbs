{{#link-to "groups"}}Back{{/link-to}}
<h2>{{ember-inline-edit value=model.name}}<small><a href="#" {{action 'deleteGroup'}}>delete</a></small></h2>
<div class="row">
    <div class="col-md-6">
        <h3>Members</h3>
        {{#if showAddUser}}
            {{input class="form-control" type="text" autofocus="true" enter="addUser"}}
        {{/if}}
        {{#each model.users as |item|}}
            <li class="list-group-item">
                {{item}}
                <a href="#" class="pull-right" {{action 'removeUser' item}}>remove</a>
            </li>
        {{/each}}
        <br>
        <button {{action 'toggleAddUser'}} class="btn btn-success">&#43; New</button>
    </div>
    <div class="col-md-6">
        <h3>Projects</h3>
        {{#if showAddProject}}
            {{input class="form-control" type="text" autofocus="true" enter="addProject"}}
        {{/if}}
        {{#each model.projects as |item|}}
            <li class="list-group-item">
                {{item}}
                <a href="#" class="pull-right" {{action 'removeProject' item}}>remove</a>
            </li>
        {{/each}}
        <br>
        <button {{action 'toggleAddProject'}} class="btn btn-success">&#43; New</button>
    </div>
</div>
