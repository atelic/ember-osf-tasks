<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <h1>OSF - Task Management</h1>
      <h4>I want to
        <select onchange={{action 'changeText' value="target.value" }} class="form-control-inline">
          <option disabled selected value> -- select an option -- </option>
          {{#each model.options as |task|}}
            <option>{{task}}</option>
          {{/each}}
        </select> {{#if move}} from
          <select class="form-control-inline" id="" name="">
            <option value="hgsa4">Alpha</option>
            <option value="9hlrd">Beta</option>
          </select> to
          <select class="form-control-inline" id="" name="">
            <option value="hgsa4">Alpha</option>
            <option value="9hlrd">Beta</option>
          </select> {{/if}} {{#if manage}} on
            <select class="form-control-inline" id="" name="">
              <option value="hgsa4">Alpha</option>
              <option value="9hlrd">Beta</option>
            </select> to
            <select class="form-control-inline" id="" name="">
              <option value="admin">Admin</option>
              <option value="write">Read+Write</option>
              <option value="read">Read only</option>
            </select> {{/if}} {{extraText}}
      </h4>
      <button class="btn btn-success text-center">Run</button>
    </div>
  </div>
</div>
